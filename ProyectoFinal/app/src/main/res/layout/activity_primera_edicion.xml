<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#FFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:src="@drawable/foto"
           android:layout_marginTop="5dp"
           />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtnombreyapellido"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Rocio Tarda"
                android:fontFamily="casual"
                android:textSize="20dp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtaño"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6°"
                    android:textSize="20dp"
                    android:fontFamily="casual"
                    android:textColor="#000"
                   />

                <TextView
                    android:id="@+id/txtcurso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IC"
                    android:textSize="20dp"
                    android:fontFamily="casual"
                    android:textColor="#000"/>
              </LinearLayout>
            <TextView
                android:id="@+id/txtnacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="10/11/99"
                android:fontFamily="casual"
                android:textSize="20dp"
                android:textColor="#000"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="17dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icono" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su estado"
        android:fontFamily="casual"
        android:textSize="15dp"
        android:textColor="#585858"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="17dp"
            android:layout_height="24dp"
            android:src="@drawable/icono"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/txtdirecciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese dirección"
            android:textSize="15dp"
            android:fontFamily="casual"
            android:textColor="#585858"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="17dp"
        android:layout_height="24dp"
        android:src="@drawable/icono"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marque sus horarios:"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:fontFamily="casual"
        android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.04"
            android:scaleType="centerInside"
            android:background="#FFFF"
            android:src="@drawable/L" />

        <ImageButton
            android:id="@+id/imageButton12Lunes"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.04"
            android:onClick="btn12hs"
            android:scaleType="centerCrop"
            android:background="#FFFF"
            android:src="@drawable/doce" />

        <ImageButton
            android:id="@+id/imageButton14Lunes"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.04"
            android:onClick="btn14hs"
            android:scaleType="centerCrop"
            android:background="#FFFF"
            android:src="@drawable/catorce" />

        <ImageButton
            android:id="@+id/imageButton16Lunes"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.04"
            android:onClick="btn16hs"
            android:scaleType="centerCrop"
            android:background="#FFFF"
            android:src="@drawable/diezyseis" />

        <ImageButton
            android:id="@+id/imageButton17Lunes"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.04"
            android:onClick="btn17hs"
            android:scaleType="centerCrop"
            android:background="#FFFF"
            android:src="@drawable/diezysiete" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.04"
            android:scaleType="centerInside"
            android:background="#FFFF"
            android:src="@drawable/M" />
            <ImageButton
                android:id="@+id/imageButton12Martes"
                android:layout_width="59dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.04"
                android:onClick="btn12hs"
                android:scaleType="centerCrop"
                android:background="#FFFF"
                android:src="@drawable/doce" />

            <ImageButton
                android:id="@+id/imageButton14Martes"
                android:layout_width="59dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.04"
                android:onClick="btn14hs"
                android:scaleType="centerCrop"
                android:background="#FFFF"
                android:src="@drawable/catorce" />

            <ImageButton
                android:id="@+id/imageButton16Martes"
                android:layout_width="59dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.04"
                android:onClick="btn16hs"
                android:scaleType="centerCrop"
                android:background="#FFFF"
                android:src="@drawable/diezyseis" />

            <ImageButton
                android:id="@+id/imageButton17Martes"
                android:layout_width="59dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.04"
                android:onClick="btn17hs"
                android:scaleType="centerCrop"
                android:background="#FFFF"
                android:src="@drawable/diezysiete" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButtonMi"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.04"
            android:onClick="btnMi"
            android:background="#FFFF"
            android:scaleType="centerInside"
            android:src="@drawable/M"
            />
        <ImageButton
            android:id="@+id/imageButtonJ"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.04"
            android:onClick="btnJ"
            android:background="#FFFF"
            android:scaleType="centerInside"
            android:src="@drawable/J" />
        <ImageButton
            android:id="@+id/imageButtonV"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.04"
            android:onClick="btnV"
            android:background="#FFFF"
            android:scaleType="centerInside"
            android:src="@drawable/V" />
        </LinearLayout>
    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="1">


       <ImageButton
           android:id="@+id/imageButton12"
           android:layout_width="59dp"
           android:layout_height="30dp"
           android:layout_marginLeft="50dp"
           android:layout_weight="0.04"
           android:onClick="btn12hs"
           android:scaleType="centerCrop"
           android:background="#FFFF"
           android:src="@drawable/doce" />

       <ImageButton
           android:id="@+id/imageButton14"
           android:layout_width="59dp"
           android:layout_height="30dp"
           android:layout_marginLeft="10dp"
           android:layout_weight="0.04"
           android:onClick="btn14hs"
           android:scaleType="centerCrop"
           android:background="#FFFF"
           android:src="@drawable/catorce" />

       <ImageButton
           android:id="@+id/imageButton16"
           android:layout_width="59dp"
           android:layout_height="30dp"
           android:layout_marginLeft="10dp"
           android:layout_weight="0.04"
           android:onClick="btn16hs"
           android:scaleType="centerCrop"
           android:background="#FFFF"
           android:src="@drawable/diezyseis" />

       <ImageButton
           android:id="@+id/imageButton17"
           android:layout_width="59dp"
           android:layout_height="30dp"
           android:layout_marginLeft="10dp"
           android:layout_weight="0.04"
           android:onClick="btn17hs"
           android:scaleType="centerCrop"
           android:background="#FFFF"
           android:src="@drawable/diezysiete" />
   </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccion sus medios de transporte habituales "
        android:textSize="15dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButtonAuto"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.04"
            android:onClick="btnAuto"
            android:scaleType="centerInside"
            android:background="#FFFF"
            android:src="@drawable/auto" />


        <ImageButton
            android:id="@+id/imageButtonSube"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.04"
            android:onClick="btnSubte"
            android:scaleType="centerInside"
            android:background="#FFFF"
            android:src="@drawable/subte" />


        <ImageButton
            android:id="@+id/imageButtonBici"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.04"
            android:onClick="btnBici"
            android:scaleType="centerInside"
            android:background="#FFFF"
            android:src="@drawable/bicicleta"
            />
        <ImageButton
            android:id="@+id/imageButtonColectivo"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.04"
            android:onClick="btnColectivo"
            android:scaleType="centerInside"
            android:background="#FFFF"
            android:src="@drawable/colectivo" />
        <ImageButton
            android:id="@+id/imageButtonCaminando"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.04"
            android:onClick="btnCaminando"
            android:scaleType="centerInside"
            android:background="#FFFF"
            android:src="@drawable/caminando" />

    </LinearLayout>

    <EditText

        android:id="@+id/txtLineasFrecuentes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Subte A, 132, "
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elija su sede:"
            android:layout_marginLeft="50dp"
            android:textSize="17dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonAlmgro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Almagro" />

            <RadioButton
            android:id="@+id/radioButtonBelgrano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belgrano" />

        </RadioGroup>
</LinearLayout>



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:text="Siguiente" />

</LinearLayout>



